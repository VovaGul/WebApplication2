@{
    ViewData["Title"] = "Home Page";
}

@model CalculatorForm

<form asp-controller="Home" asp-action="PaymentSchedule" method="post">
    <div>
        Сумма займа: <input asp-for="@Model.CreditAmount" /> <span asp-validation-for="@Model.CreditAmount" /><br />
    </div>
    <div>
        Срок займа (в месяцах): <input asp-for="@Model.CreditTermInMonths"/> <span asp-validation-for="@Model.CreditTermInMonths"/> <br/>
    </div>
    <div>
        Ставка (в год): <input asp-for="@Model.YearCreditRate"/> <span asp-validation-for="@Model.YearCreditRate"/> <br/>
    </div>
    <button type="submit">Register</button>
</form>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

